$(document).ready(function () { 
  // calculator for fecncing panel in linear 
   
  $('.custom-length').on('input', function(){ 
      // Get quantity and price per unit from the product data or calculate dynamically 
      var quantity = $(this).val(); 
      var find_price = $(this).attr('custom-price'); 
      var price_parts = find_price.split("$"); 
       if(price_parts.length > 1) { 
          find_price = price_parts[1]; // Take the number after $ 
      } 
 
      // Calculate total price 
      var totalPrice = quantity / find_price; 
 
        var roundprice = Math.round(totalPrice); 
      // Update the price per unit field 
       $('.response-custom-length').css('display','block').text('You Will Need to Buy the Following Number of Panels: '+roundprice + ' Panels');  
  }); 
  // end  
   
